<form action="/evaluation/{{evaluation._id}}?_method=PATCH" method="POST">
  <div>
    <label for="name"> Restaurant name: </label>
    <input type="name" name="name" value="{{evaluation.name}}">
  </div>

  <div>
    <label for="date">date: </label>
    <input type="date" name="date" value="{{event.date}}">
  </div>

  <div>
    <label for="time">time: </label>
    <input type="time" name="time" value="{{event.time}}">
  </div>
  <div>
    <label for="location">location: </label>
    <input type="text" name="location" value="{{explorations.location}}">
  </div>
  <div>
    <label for="equipment">equipment: </label>
    <input type="text" name="event" value="{{event.equipment}}">
  </div>

  <button type="submit">Edit Event</button>
</form>
